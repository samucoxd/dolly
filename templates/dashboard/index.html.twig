{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Bienvenidos{% endblock %}

{% block body %}

      <!--carousel-fade-->

      <div id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="{{asset('imagenes/torta2.jpg')}}" class="d-block w-100 h-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="{{asset('imagenes/torta3.jpg')}}" class="d-block w-100 h-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="{{asset('imagenes/torta4.jpg')}}" class="d-block w-100 h-100" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

<div class="container">
<section>
<div class="card-deck">

{% for producto in productos %}
    <div class="card">
      <img src="{{ asset('uploads/fotos/' ~ producto.fotoFilename) }}" class="card-img-top" >
      <div class="card-body">
        <h5 class="card-title">{{ producto.nombre }}</h5>            
        <p>Sabor: {{ producto.sabor }}</p>
        <h5 class="card-title">"RELLENOS"</h5>
        <p>{{ producto.relleno }}</p>
        <small class="text-muted">Categoria: {{ producto.categoria.nombre }}</small></p>
      </div>
    </div>
{% else %}    
    <tr>
        <td colspan="5">no records found</td>
    </tr>    
{% endfor %}            
</div>  
</section>
</div>

{% endblock %}