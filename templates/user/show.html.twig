{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="row justify-content-md-center">
<div class="col-6">
    <h1>User index</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>

            <a class="btn btn-info mr-2" href="{{ path('user_index') }}">Ver Usuario</a>
            <a class="btn btn-warning mr-2" href="{{ path('user_edit', {'id': user.id}) }}">Editar</a>
            {{ include('user/_delete_form.html.twig') }}
        </tbody>
    </table>
</div> 
</div> 
{% endblock %}
