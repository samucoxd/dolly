{% extends 'base.html.twig' %}

{% block title %}Reserva index{% endblock %}

{% block body %}
<div class="row justify-content-md-center">
<div class="col-6">
    <h1>Listado de Reserva</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reserva in reservas %}
            <tr>
                <td>{{ reserva.id }}</td>
                <td>{{ reserva.fecha ? reserva.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('reserva_show', {'id': reserva.id}) }}">ver</a>
                    <a class="btn btn-primary" href="{{ path('reserva_edit', {'id': reserva.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        <a class="btn btn-info btn-block" href="{{ path('reserva_new') }}">Crear Nuevo</a>
        </tbody>
    </table>
</div>
</div>
    
{% endblock %}
