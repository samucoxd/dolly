{% extends 'base.html.twig' %}

{% block title %}Categoria index{% endblock %}

{% block body %}

<div class="row justify-content-md-center">
<div class="col-6">
  <h1>Lista de Categoria</h1>

    <table class="table">
    <thead class="thead-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorium in categorias %}
            <tr>
                <td>{{ categorium.id }}</td>
                <td>{{ categorium.nombre }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('categoria_show', {'id': categorium.id}) }}">Ver</a>
                    <a class="btn btn-primary"href="{{ path('categoria_edit', {'id': categorium.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        <a class="btn btn-info btn-block" href="{{ path('categoria_new') }}">Crear Nuevo</a>

        </tbody>
    </table>

</div>
</div>
    
{% endblock %}
