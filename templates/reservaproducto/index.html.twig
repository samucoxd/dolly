{% extends 'base.html.twig' %}

{% block title %}Listado de Detalle Reserva{% endblock %}

{% block body %}

<div class="row justify-content-md-center">
<div class="col-6">

    <h1>Listado de Detalle Reserva</h1>

    <table class="table">
        <thead class="thead-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reserva</th>
                <th>Fecha Reserva</th>
                <th>Fecha Entrega</th>
                <th>Producto</th>
                <th>Obs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservaproducto in reservaproductos %}
            <tr>
                <td>{{ reservaproducto.id }}</td>
                <td>{{ reservaproducto.reserva.id }}</td>
                <td>{{ reservaproducto.reserva.fecha ? reservaproducto.reserva.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservaproducto.fechaentrega ? reservaproducto.fechaentrega|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservaproducto.producto.nombre }}</td>
                <td>{{ reservaproducto.obs }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('reservaproducto_show', {'id': reservaproducto.id}) }}">Ver Detalle</a>
                    <a class="btn btn-primary" href="{{ path('reservaproducto_edit', {'id': reservaproducto.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
         <a class="btn btn-info btn-block" href="{{ path('reservaproducto_new') }}">Crear Nuevo</a>

        </tbody>
    </table>
</div>
</div>
    
{% endblock %}
